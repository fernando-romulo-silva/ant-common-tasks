					<arg line="-Dmaven.javadoc.skip=true" />
					<arg line="-Djdepend.skip=true" />
					<arg line="-Dtaglist.skip=true" />
					<arg line="-Dmpir.skip=true" />
					<arg line="-Djacoco.skip=true" />
					<arg line="site" />
				</arg-elements>
			</exec-maven>

		</sequential>
	</macrodef>

